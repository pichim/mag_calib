{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-I${fileDirname}/include",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
				"${fileDirname}/src/*.c",
                "-o",
                "${fileDirname}/output/mag_calib.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}